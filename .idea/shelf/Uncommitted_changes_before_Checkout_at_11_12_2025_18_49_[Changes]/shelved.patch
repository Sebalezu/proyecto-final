+    private void login() {
+        AdminSQLiteOpenHelper admin = new AdminSQLiteOpenHelper(this);
+        SQLiteDatabase db = admin.getWritableDatabase();
+
+        String email = etEmail.getText().toString().trim();
+        String password = etPassword.getText().toString().trim();
